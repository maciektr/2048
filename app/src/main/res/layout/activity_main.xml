<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#1b1b1b" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#1b1b1b">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">

                            <TextView
                                android:id="@+id/result"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back"
                                android:gravity="center"
                                android:text="Wynik: 0"
                                android:textSize="20pt" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">

                            <LinearLayout style="@style/row">

                                <TextView
                                    android:id="@+id/cell1"
                                    style="@style/cell"/>

                                <TextView
                                    android:id="@+id/cell2"
                                    style="@style/cell"/>

                                <TextView
                                    android:id="@+id/cell3"
                                    style="@style/cell"/>

                                <TextView
                                    android:id="@+id/cell4"
                                    style="@style/cell"/>

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">

                            <LinearLayout style="@style/row">


                                <TextView
                                    android:id="@+id/cell5"
                                    style="@style/cell"/>

                                <TextView
                                    android:id="@+id/cell6"
                                    style="@style/cell"/>

                                <TextView
                                    android:id="@+id/cell7"
                                    style="@style/cell" />

                                <TextView
                                    android:id="@+id/cell8"
                                    style="@style/cell" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">

                            <LinearLayout style="@style/row">

                                <TextView
                                    android:id="@+id/cell9"
                                    style="@style/cell" />

                                <TextView
                                    android:id="@+id/cell10"
                                    style="@style/cell" />

                                <TextView
                                    android:id="@+id/cell11"
                                    style="@style/cell" />

                                <TextView
                                    android:id="@+id/cell12"
                                    style="@style/cell" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">

                            <LinearLayout style="@style/row">

                                <TextView
                                    android:id="@+id/cell13"
                                    style="@style/cell" />

                                <TextView
                                    android:id="@+id/cell14"
                                    style="@style/cell" />

                                <TextView
                                    android:id="@+id/cell15"
                                    style="@style/cell" />

                                <TextView
                                    android:id="@+id/cell16"
                                    style="@style/cell" />
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.15">

                            <Button
                                android:id="@+id/reset_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="@style/button"
                                android:text="Reset">

                            </Button>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#1b1b1b" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>